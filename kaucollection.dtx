% \begin{macro}{\frontmatter}
% Start the frontmatter, beginning with page iii and redefining the abstract environment so that it generates an own section.
%    \begin{macrocode}
\newcommand*\frontmatter{%
  \clearpage%
  \setcounter{page}{3}%
  \renewcommand\thepage{\roman{page}}%
  \renewenvironment{abstract}{%
    \newcommand\keywords{\paragraph{Keywords:}}%
    \cleardoublepage%
    \section*{\@title}%
    \textsc{\@author}\par%
    \noindent\textit{\@institute}%
    \section*{Abstract}%
    %\addcontentsline{toc}{section}{Abstract}%
  }{%
    \cleardoublepage%
  }%
}
%    \end{macrocode}
% \end{macro}
%
% \begin{environment}{acknowledgements}
% Acknowledgements section.
%    \begin{macrocode}
\newenvironment{acknowledgements}{%
  \cleardoublepage%
  \section*{Acknowledgements}%
  %\addcontentsline{toc}{section}{Acknowledgements}%
}{%
  \par\bigskip\bigskip\bigskip\noindent\@place, \@date\hfill \@author%
  \cleardoublepage%
}
%    \end{macrocode}
% \end{environment}
%
% \begin{macro}{\mainmatter}
% Start the mainmatter with the part `Introductory Summary' on page~1.
%    \begin{macrocode}
\newcommand\mainmatter[1][]{%
  \cleardoublepage%
  \renewenvironment{abstract}{\kuk@abstract}{\kuk@endabstract}
  \setcounter{page}{1}%
  \renewcommand\thepage{\arabic{page}}%
  \kaupart*[body={#1}]{Introductory Summary}%
}
%    \end{macrocode}
% \end{macro}
